{
  "name": "muon",
  "author": "Petros Ioannou",
  "version": "0.0.2",
  "license": "MIT, Anti-996",
  "homepage": "https://github.com/petros-ioannou1/muon",
  "description": "Muon.",
  "repository": {
    "type": "git",
    "url": "https://github.com/petros-ioannou1/muon"
  },
  "dependencies": {
    "express": "^4.17.1",
    "lively-cli": "^2.0.7"
  },
  "devDependencies": {
    "@swc/core": "^1.2.51",
    "easy": "^11.1.22",
    "easy-with-style": "^3.0.30",
    "esbuild": "^0.11.2",
    "juxtapose": "^3.0.22",
    "necessary": "^7.1.10",
    "sufficient": "^2.0.6",
    "watchful-cli": "^1.6.15"
  },
  "scripts": {
    "start": "node ./bin/main.js",
    "clean": "rm -rf lib",
    "watchful": "watchful -mp=4 --transpiler=swc --bundler=esbuild --source-directory=./src --lib-directory=./lib --entry-file=main.js --bundle-file=./client.js --pause=100",
    "batch": "npm run watchful batch --",
    "batch-debug": "npm run watchful batch -- --debug",
    "incremental": "npm run watchful incremental --",
    "incremental-debug": "npm run watchful incremental -- --debug",
    "build": "npm run clean && npm run batch",
    "build-debug": "npm run clean && npm run batch-debug",
    "watch": "npm run clean && npm run batch && npm run incremental",
    "watch-debug": "npm run clean && npm run batch-debug && npm run incremental-debug"
  },
  "main": "./lib/index.js"
}
